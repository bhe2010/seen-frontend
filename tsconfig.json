{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "modals/*": ["modals/*"],
      "components/*": ["components/*"],
      "icons/*": ["components/icons/*"],
      "ui/*": ["components/ui/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "layouts/*": ["layouts/*"],
      "pages/*": ["pages/*"],
      "public/*": ["../public/*"]
    },
    "typeRoots": [
      "./node_modules/@types", 
      "./typings"
    ]
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "typings/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
